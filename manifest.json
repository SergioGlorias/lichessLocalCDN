{
    "manifest_version": 3,
    "name": "Lichess Local CDN",
    "version": "1.0.1",
    "permissions": [
        "declarativeNetRequest"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://lichess.org/*",
                "*://lichess1.org/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "block_flags",
                "enabled": true,
                "path": "rules/flags.json"
            }
        ]
    },
    "web_accessible_resources": [
        {
            "resources": [
                "img/fide-fed/*.webp",
                "img/flags/*.png"
            ],
            "matches": [
                "*://lichess.org/*",
                "*://lichess1.org/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}